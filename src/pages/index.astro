---
import Layout from "../layouts/Layout.astro";

const locale = Astro.locals.lang as 'en' | 'fr' ?? 'en';
console.log('Locale in index:', locale);
---

<Layout>
  <div
    class="flex flex-col h-full items-center justify-center glass bg-primary"
  >
    <h1 class="text-4xl font-bold mb-4 text-primary-content">
      Welcome to SVG Generator
    </h1>
    <p class="mb-6 text-lg text-primary-content">
      Create and render SVGs from prompts.
    </p>
    <a href="/generator" class="btn btn-secondary">Go to SVG Generator</a>
  </div>
</Layout>
